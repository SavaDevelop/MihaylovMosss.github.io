      div.row
        include ../../common.blocks/breadcrumb/breadcrumb
    .container.app-det
      h1.title_h1.title_center Заявка принята
      .app-det__content
        .app-det__item
          .app-det__nav
            .app-det__ord-num номер заказа - 39459
